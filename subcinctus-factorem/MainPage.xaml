<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:subcinctus_factorem"
             x:Class="subcinctus_factorem.MainPage">

    <Grid RowDefinitions="Auto,*">

        <!-- Horizontal list of person buttons -->
        <CollectionView Grid.Row="0"
                ItemsSource="{Binding employees}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedPerson}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Title}" 
            Margin="10"
            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPage}}, Path=SelectPersonCommand}"
            CommandParameter="{Binding}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Schedule grid for the selected person -->
        <Border Grid.Row="1"
                Stroke="LightGray"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1"
                
                Margin="10"
                Padding="15"
                VerticalOptions="Fill"
                HorizontalOptions="Fill">

            <Grid RowDefinitions="Auto,*"
                  ColumnDefinitions="*,*,*,*">

                <!-- Headers -->
                <Label Grid.Row="0" Grid.Column="0" Text="Date" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Position" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Start" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="3" Text="End" FontAttributes="Bold" HorizontalOptions="Center"/>

                <!-- Rows of schedule -->
                <CollectionView Grid.Row="1"
                                Grid.ColumnSpan="4"
                                ItemsSource="{Binding SelectedPerson.shifts}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,*,*,*"
                                Padding="5">
                                <Label Grid.Column="0" Text="{Binding Date}" HorizontalOptions="Center"/>
                                <Label Grid.Column="1" Text="{Binding Position}" HorizontalOptions="Center"/>
                                <Label Grid.Column="2" Text="{Binding start}" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="{Binding end}" HorizontalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>
        </Border>
    </Grid>
</ContentPage>
