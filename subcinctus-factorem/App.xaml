<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:subcinctus_factorem"
             x:Class="subcinctus_factorem.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                
                <Setter Property="FontFamily" Value="monospace"/>
            </Style>
            
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="monospace"/>
            </Style>

            <!-- Default font for all Buttons -->
        

            <!-- Default font for all Pickers -->
            <Style TargetType="Picker">
                <Setter Property="FontFamily" Value="monospace"/>
            </Style>

            <!-- Default font for all Entries -->
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="monospace"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
